        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20"
                android:fontFamily="@font/svn_avo_bold"
                android:text="@string/details"
                android:textSize="@dimen/margin_20" />
            <TextView
                android:id="@+id/timeChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/svn_avo"
                android:text="@string/today"
                android:textSize="@dimen/margin_20" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">
            <TextView
                android:id="@+id/tv_count_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:fontFamily="@font/svn_avo"
                android:text="@string/motorcycle_count"
                android:textSize="@dimen/margin_16" />
            <TextView
                android:id="@+id/tv_count_motor_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_32"
                android:fontFamily="@font/svn_avo"
                android:text="@string/paid"
                android:textSize="@dimen/margin_16" />
            <TextView
                android:id="@+id/tv_count_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_16"
                android:fontFamily="@font/svn_avo"
                android:text="@string/car_count"
                android:textSize="@dimen/margin_16" />
            <TextView
                android:id="@+id/tv_count_car_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_16"
                android:fontFamily="@font/svn_avo"
                android:text="@string/paid"
                android:textSize="@dimen/margin_16" />
        </GridLayout>

        <TextView
            android:id="@+id/tv_doanhthuMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16"
            android:fontFamily="@font/svn_avo"
            android:text="@string/motorcycle_revenue"
            android:textSize="@dimen/margin_16" />
        <TextView
            android:id="@+id/tv_doanhthuCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16"
            android:fontFamily="@font/svn_avo"
            android:text="@string/car_revenue"
            android:textSize="@dimen/margin_16" />
        <TextView
            android:id="@+id/tv_AllDoanhThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16"
            android:fontFamily="@font/svn_avo"
            android:text="@string/total_revenue"
            android:textSize="@dimen/margin_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginEnd="@dimen/margin_32"
            android:background="@color/purpil_4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_100">
            <TextView
                android:id="@+id/tv_setting_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_ticket_price"
                android:layout_marginStart="@dimen/margin_20"
                android:fontFamily="@font/svn_avo_bold"
                android:textSize="@dimen/textSize20" />

            <TextView
                android:id="@+id/tv_price_motobike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/edt_price_motorbike_hour"
                android:layout_alignBottom="@id/edt_price_motorbike_hour"
                android:gravity="center_vertical"
                android:fontFamily="@font/svn_avo"
                android:text="@string/motorcycle_price"
                android:textSize="@dimen/margin_16" />

            <EditText
                android:id="@+id/edt_price_motorbike_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_below="@+id/tv_setting_price"
                android:fontFamily="@font/svn_avo"
                android:hint="@string/per_hour"
                android:layout_toEndOf="@+id/tv_price_motobike"
                android:gravity="center_vertical"
                android:inputType="number"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_price_motorbike_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="@font/svn_avo"
                android:inputType="number"
                android:hint="@string/per_day"
                android:layout_toEndOf="@+id/tv_price_motobike"
                android:layout_below="@+id/edt_price_motorbike_hour"
                android:textSize="@dimen/textSize16" />
            <EditText
                android:id="@+id/edt_price_motorbike_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="@font/svn_avo"
                android:inputType="number"
                android:hint="@string/per_month"
                android:layout_toEndOf="@+id/tv_price_motobike"
                android:layout_below="@+id/edt_price_motorbike_day"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_price_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_below="@+id/edt_price_motorbike_month"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/edt_price_car_hour"
                android:layout_alignBottom="@id/edt_price_car_hour"
                android:gravity="center_vertical"
                android:fontFamily="@font/svn_avo"
                android:text="@string/car_price"
                android:textSize="@dimen/margin_16" />

            <EditText
                android:id="@+id/edt_price_car_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_toEndOf="@id/tv_price_motobike"
                android:layout_below="@+id/edt_price_motorbike_month"
                android:fontFamily="@font/svn_avo"
                android:inputType="number"
                android:hint="@string/per_hour"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/edt_price_car_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_toEndOf="@id/tv_price_motobike"
                android:layout_below="@+id/edt_price_car_hour"
                android:fontFamily="@font/svn_avo"
                android:inputType="number"
                android:hint="@string/per_day"
                android:textSize="@dimen/textSize16" />
            <EditText
                android:id="@+id/edt_price_car_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_toEndOf="@id/tv_price_motobike"
                android:layout_below="@+id/edt_price_car_day"
                android:fontFamily="@font/svn_avo"
                android:inputType="number"
                android:hint="@string/per_month"
                android:textSize="@dimen/textSize16" />
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>