<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_50"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_motorbike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_16"
        android:clickable="true"
        android:onClick="onMotorbikeClicked">
        <ImageView
            android:id="@+id/btn_motorbike"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:src="@drawable/ic_motorbike" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:text="@string/motorcycle"
            android:layout_marginStart="@dimen/margin_16"
            android:fontFamily="@font/svn_avo_bold"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="onMotorbikeClicked">
        <ImageView
            android:id="@+id/btn_car"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:src="@drawable/ic_car" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:layout_marginStart="@dimen/margin_16"
            android:text="@string/car"
            android:fontFamily="@font/svn_avo_bold"
            android:gravity="center_vertical"/>
    </LinearLayout>






</LinearLayout>